<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Job Board{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}
                {{ importmap('app') }}
            {% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
                <header class="p-3 text-bg-dark">
                    <div class="container">
                        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                                <h1>Job Board</h1>
                            </a>
                            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                                <li><a href="{{ path('app_job_search') }}" class="nav-link px-2 text-white ms-3">Search</a></li>
                                <li><a href="#" class="nav-link px-2 text-white">FAQs</a></li>
                                <li><a href="{{ path('app_register_employer') }}" class="nav-link px-2 text-white">For Employers</a></li>
                            </ul>
                            {% if is_granted('ROLE_USER') %}
                                <div class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                                    <a href="{{ path('app_employer_company') }}" class="nav-link text-white">{{ app.user.firstName }} {{ app.user.lastName }} ({{ app.user.company.name }})</a>
                                </div>
                                <div class="text-end">
                                    <a href="{{ path('app_logout') }}" class="btn btn-outline-light me-2">Logout</a>
                                </div>
                            {% elseif is_granted('ROLE_USER') %}
                                <div class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                                    <a href="{{ path('app_user_profile') }}" class="nav-link text-white">{{ app.user.firstName }} {{ app.user.lastName }}</a>
                                </div>
                                <div class="text-end">
                                    <a href="{{ path('app_logout') }}" class="btn btn-outline-light me-2">Logout</a>
                                </div>
                            {% else %}
                                <div class="text-end">
                                    <a href="{{ path('app_login') }}" class="btn btn-outline-light me-2">Login</a>
                                    <a href="{{ path('app_register') }}" class="btn btn-warning">Create Account</a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </header>
            <main>
                <div class="container">
                    {% block main %}

                    {% endblock %}
                </div>
            </main>
        {% endblock %}
    </body>
</html>
